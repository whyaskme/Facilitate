@page "/"

@using AdminBlazor.Data
@using Facilitate.Libraries.Models;

@attribute [StreamRendering(true)]
@rendermode InteractiveServer
@inject WebServices WebServices

<PageTitle>Welcome to Facilitate Platform Administration</PageTitle>

<div class="welcome">

    <DxGridLayout CssClass="welcome-gridlayout" RowSpacing="3rem">
        <Rows>
            <DxGridLayoutRow Height="auto" Areas="header"></DxGridLayoutRow>
            <DxGridLayoutRow Height="auto" Areas="cards"></DxGridLayoutRow>
        </Rows>
        <Items>
            <DxGridLayoutItem Area="header" CssClass="welcome-title">
                <Template>
                    <div class="welcome-title-header">Welcome to Facilitate Platform Administration</div>

                    <div class="quotes-leaderboard">
                        <span class="summary-item"><a href="/leads">Leads</a> 
                            <span class="stat-count">@leaderboardStats.LeadCount.ToString("N0")</span> 
                            <span class="stat-count">@leaderboardStats.LeadValue.ToString("C")</span>
                            <span class="">@leaderboardStats.LeadSqFt.ToString("N0")ft</span>
                        </span>
                        <span class="summary-item"><a href="/opportunities">Opportunities</a> 
                            <span class="stat-count">@leaderboardStats.OpportunityCount.ToString("N0")</span> 
                            <span class="stat-count">@leaderboardStats.OpportunityValue.ToString("C")</span>
                            <span class="">@leaderboardStats.OpportunitySqFt.ToString("N0")ft</span>
                        </span>
                        <span class="summary-item"><a href="/customers">Customers</a> 
                            <span class="stat-count">@leaderboardStats.CustomerCount.ToString("N0")</span> 
                            <span class="stat-count">@leaderboardStats.CustomerValue.ToString("C")</span> 
                            <span class="">@leaderboardStats.CustomerSqFt.ToString("N0")ft</span>
                        </span>
                        <span class="summary-item"><a href="/completed">Completions</a> 
                            <span class="stat-count">@leaderboardStats.CompletionCount.ToString("N0")</span> 
                            <span class="stat-count">@leaderboardStats.CompletionValue.ToString("C")</span> 
                            <span class="">@leaderboardStats.CompletionSqFt.ToString("N0")ft</span>
                        </span>
                        <span class="summary-item"><a href="/archives">Archives</a> 
                            <span class="stat-count">@leaderboardStats.ArchiveCount.ToString("N0")</span> 
                            <span class="stat-count">@leaderboardStats.ArchiveValue.ToString("C")</span> 
                            <span class="">@leaderboardStats.ArchiveSqFt.ToString("N0")ft</span>
                        </span>
                        <span class="summary-item"><a href="/warranties">Warranties</a> 
                            <span class="stat-count">@leaderboardStats.WarrantyCount.ToString("N0")</span> 
                            <span class="stat-count">@leaderboardStats.WarrantyValue.ToString("C")</span> 
                            <span class="">@leaderboardStats.WarrantySqFt.ToString("N0")ft</span>
                        </span>
                    </div>

                    <div class="welcome-title-content">
                        <img src="images/Backgrounds/Contractors.webp" alt="Facilitate Platform Admin" style="width: 100%; height: auto;" />
                        <br /><br />
                        Dashboard charts coming...
                    </div>
                </Template>
            </DxGridLayoutItem>
        </Items>
    </DxGridLayout>
</div>

<DxLoadingPanel @bind-Visible=@LoadingPanelVisible
                PositionTarget="body"
                ApplyBackgroundShading="true"
                CssClass="w-100">
</DxLoadingPanel>

@code {

    public QuoteLeaderboard leaderboardStats;

    protected override void OnInitialized()
    {
        leaderboardStats = WebServices.GetLeaderBoardStats();
    }

    bool LoadingPanelVisible { get; set; } = true;

    public string updateStatus = "Refreshing";

    public Index()
    {
        var timer = new Timer(new TimerCallback(_ =>
        {
            leaderboardStats = WebServices.GetLeaderBoardStats();

            InvokeAsync(() =>
            {
                StateHasChanged();

                LoadingPanelVisible = false;
            });
        }), null, 1000, 1000);
    }

    private IEnumerable<Quote>? quotes;

}