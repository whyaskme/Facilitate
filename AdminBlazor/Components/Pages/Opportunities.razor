                            <td class="table-button-container">
                                <button class="btn btn-primary doc-select-button" disabled="@SendDocsDisabled" @onclick="@EmailFiles">Email Docs</button>
                            </td>
                            <td colspan="3" class="notes-items">

                                <h4>Send Documents <span @onclick="@(() => PopupVisibleHelpSendFiles = true)" class="link-help-info"><img src="images/icons/Help.png" class="icon-help" /></span></h4>

                                <label class="document-label-container">
                                    Welcome letter
                                    <input type="checkbox" id="welcomeletter" name="welcomeletter" value="welcomeletter">
                                </label>
                                <label class="document-label-container">
                                    Engagement Agreement
                                    <input type="checkbox" id="engagementagreement" name="engagementagreement" value="engagementagreement">
                                </label>
                                <label class="document-label-container">
                                    and/or
                                </label>
                                <label>
                                    <DxUpload Name="myFile"
                                        AllowMultiFileUpload="true"
                                        UploadUrl="@GetUploadUrl("api/Upload/Upload/")"
                                        SelectedFilesChanged="@SelectedFilesChanged"
                                        MaxFileSize="15000000"
                                        AllowedFileExtensions="@(new List<string> { ".jpg", ".jpeg", ".gif", ".png", ".mpg", ".mp4" })"
                                        AcceptedFileTypes="@(new List<string> {  "image/*", "video/*"})"
                                        CssClass="@(SelectedFilesCount > 0 ? "w-100" : string.Empty)">
                                    </DxUpload>
                                </label>
                            </td>
                        </tr>
                        <tr class="notes-container">
                            <td class="table-button-container">
                                <DxUpload Name="myFile"
                                    AllowMultiFileUpload="true"
                                    UploadUrl="@GetUploadUrl("api/Upload/Upload/")"
                                    SelectedFilesChanged="@SelectedFilesChanged"
                                    MaxFileSize="15000000"
                                    AllowedFileExtensions="@(new List<string> { ".jpg", ".jpeg", ".gif", ".png", ".mpg", ".mp4" })"
                                    AcceptedFileTypes="@(new List<string> {  "image/*", "video/*"})"
                                    CssClass="@(SelectedFilesCount > 0 ? "w-100" : string.Empty)">
                                </DxUpload>
                            </td>
                            <td colspan="3" class="notes-items">

                                <h4>File Attachments <span @onclick="@(() => PopupVisibleHelpFileAttachments = true)" class="link-help-info"><img src="images/icons/Help.png" class="icon-help" /></span></h4>

                                @{
                                    var documentCount = _quote.attachments.Count;
                                    for (int currentIndex = 0; currentIndex < @_quote.attachments.Count; currentIndex++)
                                    {
                                        <div class="note-row">
                                            <div class="div-date-container">
                                                <label><b>@documentCount)</b> @_quote.attachments[currentIndex].Date</label>
                                            </div>

                                            <span id="@_quote.attachments[currentIndex]._id" class="hyperlink" @onclick="@(() => PopupVisibleDeleteFile = true)">Delete</span>
                                            
                                            <span class="bar-spacer">|</span>
                                            <a href="@_quote.attachments[currentIndex].MediaUrl" target="_blank">
                                                <span class="detail-item">@_quote.attachments[currentIndex].MediaDescription</span>
                                            </a>
                                            <span class="bar-spacer">|</span>
                                            <label>File Type</label>
                                            <span>@FileType</span>
                                            <span class="bar-spacer">|</span>
                                            <label>Author</label>
                                            <span>@Author</span>
                                        </div>
                                        documentCount--;
                                    }
                                }
                            </td>
                        </tr>
                        <tr class="notes-container">
                            <td class="table-button-container">
                                <button class="btn btn-primary doc-select-button" @onclick="@(() => PopupVisibleAddNote = true)">Add Note</button>
                            </td>
                            <td colspan="3" class="notes-items">

                                <h4>File Notes <span @onclick="@(() => PopupVisibleHelpFileNotes = true)" class="link-help-info"><img src="images/icons/Help.png" class="icon-help" /></span></h4>

                                @{
                                    var noteCount = _quote.notes.Count;
                                    for (int currentIndex = 0; currentIndex < @_quote.notes.Count; currentIndex++)
                                    {
                                        <div class="note-row">
                                            <div class="div-date-container">
                                                <label><b>@noteCount)</b> @_quote.notes[currentIndex].Date</label>
                                            </div>

                                            <span class="hyperlink" @onclick="@(() => PopupVisibleDeleteNote = true)">Delete</span>

                                            <span class="bar-spacer">|</span>
                                            <span class="detail-item">@_quote.notes[currentIndex].Details</span>

                                            <span class="bar-spacer">|</span>
                                            <label>Author</label>
                                            <span>@Author</span>
                                        </div>
                                        noteCount--;
                                    }
                                }
                            </td>
                        </tr>

                    </tbody>
                </table>

                <div class="table-spacer" />

                <table>
                <tbody>
                    <tr>
                        <td colspan=4>
                            <h6>Origin</h6>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>RecId</label>
                            <span class="detail-item">@_quote._id</span>
                        </td>
                        <td>
                            <label>Referrer</label>
                            <a href="@_quote.externalUrl" target="_blank">
                                <span class="detail-item">@_quote.externalUrl</span>
                            </a>
                        </td>
                        <td>
                            <label>SessionId</label>
                            <span class="detail-item">@_quote.sessionId</span>
                        </td>
                        <td>
                            <label>Market</label>
                            <span class="detail-item">@_quote.market</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Rep Name</label>
                            <span class="detail-item">@_quote.repLead</span>
                        </td>
                        <td>
                            <label>Rep Email</label>
                            <a href="mailto:@_quote.repEmail">
                                <span class="detail-item">@_quote.repEmail</span>
                            </a>
                        </td>
                        <td>
                            <label>RoofleId</label>
                            <span class="detail-item">@_quote.leadId</span>
                        </td>
                        <td></td>
                    </tr>
                </tbody>
                </table>

                <div class="table-spacer" />

                <table>
                <tbody>
                    <tr>
                        <td>
                            <h6>History</h6>
                        </td>
                    </tr>
                    <tr> 
                        <td>

                            @{
                                var currentEventCount = _quote.events.Count;
                                for (int currentIndex = 0; currentIndex < @_quote.events.Count; currentIndex++)
                                {
                                    <tr>
                                        <td>
                                            <div class="div-date-container">
                                            <label><b>@currentEventCount)</b> @_quote.events[currentIndex].Date</label>
                                            </div>
                                            <span class="detail-item">@_quote.events[currentIndex].Details</span>
                                            <span class="bar-spacer">|</span>
                                            <label>Author</label>
                                            <span>@Author</span>
                                        </td>
                                    </tr>
                                    currentEventCount--;
                                }
                            }
                        </td>
                    </tr>
                </tbody>
                </table>

                <div class="table-spacer" />

                <div class="quote-detail-controls-container">
                    <button class="btn btn-primary" @onclick="@(() => PopupVisibleMakeCustomer = true)">Make Customer</button>
                    <button class="btn btn-primary" @onclick="@(() => PopupVisibleArchive = true)">Archive</button>
                    <button class="btn btn-primary" @onclick="CloseDetails">Close</button>
                </div>

            }
            </DetailRowTemplate>

        </DxGrid>
}

<DxPopup @bind-Visible="@PopupVisibleDeleteFile" ShowFooter="true" HeaderText="Delete File">
