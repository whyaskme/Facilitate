    private async Task TimerRefresh()
    {
        bool isAggregate = false;
        double standaloneTotal = 0;
        string authorName = "";

        bool hasParent = false;

        DateTime lastQuoteEventTimestamp = DateTime.MinValue;
        string lastQuoteEventDetails = "";

        try
        {
            TimerDispose();

            _timer = new Timer(new TimerCallback(_ =>
            {
                standaloneTotal = 0;

                RelatedQuoteSummaryList = new List<QuoteSummary>();
                AttachmentList = new List<Attachment>();
                EventList = new List<Event>();
                NoteList = new List<Note>();

                QuotesList = webServices.GetQuote(QuoteId);
                if (QuotesList != null)
                {
                    CurrentlySelectedQuote = QuotesList[0];

                    standaloneTotal = CurrentlySelectedQuote.totalQuote;

                    // Get child quote summaries
                    RelatedQuoteSummaryList = webServices.GetRelatedQuoteSummaries(CurrentlySelectedQuote);

                    // Process attachments
                    foreach (Attachment attachment in CurrentlySelectedQuote.attachments)
                    {
                        attachment.Trade = CurrentlySelectedQuote.Trade;
                        if (attachment.MediaName == "")
                            attachment.MediaName = "Filename?";
                    }
                    AttachmentList.AddRange(CurrentlySelectedQuote.attachments);

                    // Process Related events
                    foreach (Event _event in CurrentlySelectedQuote.events)
                    {
                        _event.Trade = CurrentlySelectedQuote.Trade;
                        EventList.Add(_event);
                    }

                    if (CurrentlySelectedQuote.Trade == "Aggregate")
                    {
                        // Process remote Child events
                        List<Event> childEvents = new List<Event>();

                        foreach (Relationship relationship in CurrentlySelectedQuote.relationships)
                        {
                            var childQuote = WebServices.GetQuote(relationship._id)[0];

                            childEvents.AddRange(childQuote.events);
                        }
                        EventList.AddRange(childEvents);
                    }

                    // Process local Aggregate or standalone notes
                    foreach (Note note in CurrentlySelectedQuote.notes)
                    {
                        note.Trade = CurrentlySelectedQuote.Trade;
                    }
                    NoteList.AddRange(CurrentlySelectedQuote.notes);

                    if (CurrentlySelectedQuote.Trade == "Aggregate")
                    {
                        // Process remote Child notes
                        List<Note> childNotes = new List<Note>();

                        foreach (Relationship relationship in CurrentlySelectedQuote.relationships)
                        {
                            var childQuote = WebServices.GetQuote(relationship._id)[0];

                            childNotes.AddRange(childQuote.notes);
                        }
                        NoteList.AddRange(childNotes);
                    }

                    averageQuoteValue = 0;
                    var quotesWithBidValue = 0;

                    foreach (QuoteSummary quoteSummary in RelatedQuoteSummaryList)
                    {
                        if (quoteSummary.BidderType == "Default")
                        {
                            defaultQuoteValue = quoteSummary.totalQuote;
                        }

                        if (quoteSummary.totalQuote > 0)
                        {
                            quotesWithBidValue++;

                            averageQuoteValue += quoteSummary.totalQuote;
                        }
                    }

                    averageQuoteValue = (averageQuoteValue / quotesWithBidValue);

                    currentQuoteIndex = 0;

                    if (CurrentlySelectedQuote.Trade == "Aggregate")
                    {
                        CurrentlySelectedQuote.totalQuote = averageQuoteValue;
                    }
                    else
                    {
                        CurrentlySelectedQuote.totalQuote = standaloneTotal;
                    }

                    foreach (QuoteSummary RelatedQuote in RelatedQuoteSummaryList)
                    {
                        foreach (Event _event in RelatedQuote.events)
                        {
                            if (_event.DateTime > lastQuoteEventTimestamp)
                            {
                                lastQuoteEventTimestamp = _event.DateTime.ToLocalTime();
                                lastQuoteEventDetails = _event.Details;
                            }
                        }
                    }

                    // Sort collections
                    LocalizeRelatedQuotes(RelatedQuoteSummaryList);
                    RelatedQuoteSummaryList = RelatedQuoteSummaryList.OrderByDescending(x => x.lastEventTimeStamp).ToList();

                    var summaryIndex = 0;

                    var currentQuoteId = CurrentlySelectedQuote._id;
                    foreach (QuoteSummary _summary in RelatedQuoteSummaryList)
                    {
                        summaryIndex++;

                        // Set the row number for grid column display
                        _summary.rowIndex = summaryIndex;

                        if (_summary._id == CurrentlySelectedQuote._id)
                        {
                            // Remove current Item. Don't want this to link back to itself.
                            RelatedQuoteSummaryList.Remove(_summary);
                            break;
                        }

                        // Notate relationship type

                    }

                    LocalizeAttachments(AttachmentList);
                    AttachmentList = AttachmentList.OrderByDescending(x => x.DateTime).ToList();

                    LocalizeEvents(EventList);
                    EventList = EventList.OrderByDescending(x => x.DateTime).ToList();

                    LocalizeNotes(NoteList);
                    NoteList = NoteList.OrderByDescending(x => x.DateTime).ToList();

                    CurrentlySelectedQuote.timestamp = CurrentlySelectedQuote.timestamp.ToLocalTime();
                    CurrentlySelectedQuote.lastUpdated = CurrentlySelectedQuote.lastUpdated.ToLocalTime();

                    if (CurrentlySelectedQuote.Trade == "Aggregate")
                    {
                        currentQuoteContainerType = "Parent";
                    }
                    else
                    {
                        currentQuoteContainerType = "Child";
                    }

                    SetUIStyles(currentQuoteContainerType);

                    InvokeAsync(() =>
                    {
                        StateHasChanged();
                    });
                }
            }), null, 1000, 1000);

            LoadingPanelVisible = false;
        }
        catch(Exception ex)
        {
            var errMsg = ex.Message;
        }
    }

    public void LocalizeRelatedQuotes(List<QuoteSummary> RelatedQuoteSummaryList)
    {
        foreach(var _summary in RelatedQuoteSummaryList)
        {
            var quoteId = _summary._id;
            Quote currentQuote = (Quote)WebServices.GetQuote(quoteId)[0];

            var quoteEvents = currentQuote.events.OrderByDescending(x => x.DateTime).ToList();

            if(quoteEvents.Count > 0)
            {
                var lastEvent = quoteEvents.FirstOrDefault();

                _summary.lastEventTimeStamp = lastEvent.DateTime.ToLocalTime();
                _summary.lastEventDetails = lastEvent.Details;
            }
        }
    }

